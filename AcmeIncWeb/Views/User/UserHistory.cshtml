@model IEnumerable<AcmeIncWeb.Models.Order>

@{
    ViewData["Title"] = "Index";
    <link rel="stylesheet" href="~/css/buttons.css" />
}

@{

    if (Model.Count() > 0)
    {


        if (TempData["OrderAdded"] != null)
        {

            <div class="alert alert-info" role="alert">
                Order successful!
            </div>

        }

        <h5>Your order History</h5>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Prod.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Prod.Sell)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Prod.ImageUrl)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prod.Name)
                        </td>
                        <td>
                            R  @Html.DisplayFor(modelItem => item.Prod.Sell)
                        </td>
                        <td>
                            <img src="@item.Prod.ImageUrl" style=" height:auto; width:75px" />
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }

    else
    {
        <p>You have no previous orders. </p> <a>Start Shopping!</a>
        <br />
    }


}

