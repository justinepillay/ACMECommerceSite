@model AcmeIncWeb.Models.User

@{
    ViewData["Title"] = "Create Customer";
    <link rel="stylesheet" href="~/css/buttons.css" />
}

<center>

    <h4>Create an account</h4>
    <hr />
    <p style="color:red">@ViewBag.Error</p>
    <div class=form-horizontal>
        
            <form asp-action="CreateCustomer">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" style="width:400px" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" style="width:400px" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fname" class="control-label"></label>
                    <input asp-for="Fname" style="width:400px" class="form-control" />
                    <span asp-validation-for="Fname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Lname" class="control-label"></label>
                    <input asp-for="Lname" style="width:400px" class="form-control" />
                    <span asp-validation-for="Lname"  class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="gradient-button gradient-button-4" />
                </div>
            </form>
        </div>
   


</center>